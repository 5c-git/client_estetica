extends ../templates/default

include ../components/wrapper-card/wrapper-card
include ../components/slider/slider

block header
  +header({
    mixin: 'header--liquid',
  })

block main
  include ../components/breadcrumbs/breadcrumbs

  include ../components/layout-heder/layout-heder

  +layout({
    title: 'Группа компаний ESTETICA - лидер по<br> производству мебели премиум класса в России',
  })
    include ../components/statistics/statistics

  +layout({})
    include ../components/our-mission/our-mission

  +layout({
    mixin: 'layout--grey',
  })
    include ../components/our-history/our-history

  +layout({})
    +wrapper-card({
      ver1: true,
    })
    +wrapper-card({
      ver2: true,
    })
    +wrapper-card({
      ver3: true,
    })

  +layout({
    title: 'Преимущества работы<br> в ESTETICA',
  })
    include ../components/slider4/slider4

  +layout({
    mixin: 'layout--grey',
  })
    include ../components/training/training

  +layout({
    title: 'Истории успеха',
  })
    +slider({
      career: true,
    })

  +layout({
    title: 'Фирменная сеть салонов в городах России',
  })
    +article({
      storeMap: true,
    })

  include ../components/store-map/store-map

  +layout({})
    include ../components/card-catalog/card-catalog